{
  "name": "svdown",
  "version": "0.1.1",
  "description": "A modern markdown preprocessor for Svelte",
  "type": "module",
  "author": "Sea Grapes",
  "files": [
    "dist",
    "src"
  ],
  "license": "MIT",
  "keywords": [
    "svelte",
    "sveltekit",
    "markdown",
    "md",
    "mdx"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Sea-Grapes/svdown"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json",
    "./data": "./dist/data.js"
  },
  "scripts": {
    "build": "tsdown",
    "build:vercel": "pnpm i && tsdown",
    "dev": "tsdown --watch"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "tsdown": "latest",
    "@sveltejs/kit": "^2.31.1",
    "svelte": "^5.4.0",
    "vite": "^7.1.2",
    "@types/mdast": "^4.0.4",
    "@types/unist": "^3.0.3"
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "dependencies": {
    "estree-walker": "^3.0.3",
    "gray-matter": "^4.0.3",
    "html-entities": "^2.6.0",
    "magic-string": "^0.30.17",
    "mdast-util-to-markdown": "^2.1.2",
    "rehype-raw": "^7.0.0",
    "rehype-stringify": "^10.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "shiki": "^3.9.2",
    "slash": "^5.1.0",
    "tinyglobby": "^0.2.14",
    "unified": "^11.0.5",
    "unist-util-inspect": "^8.1.0",
    "unist-util-visit": "^5.0.0"
  }
